		"vanilla-swipe": "2.4.1"
	},
	"devDependencies": {
		"@jsdevtools/coverage-istanbul-loader": "3.0.5",
		"@playwright/test": "1.42.1",
		"bundlesize2": "^0.0.31",
		"copy-webpack-plugin": "12.0.2",
		"css-loader": "6.10.0",
		"docdash": "2.0.2",
		"dotenv-webpack": "8.0.1",
		"es-check": "7.1.1",
		"eslint": "8.57.0",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-promise": "6.1.1",
		"gh-pages": "6.1.1",
		"html-webpack-plugin": "5.6.0",
		"jasmine": "5.1.0",
		"jsdoc": "4.0.2",
		"jsdoc-ts-utils": "5.0.0",
		"karma": "6.4.3",
		"karma-chrome-launcher": "3.2.0",
		"karma-coverage-istanbul-reporter": "3.0.3",
		"karma-firefox-launcher": "2.1.2",
		"karma-iframes": "1.3.1",
		"karma-jasmine": "5.1.0",
		"karma-junit-reporter": "2.0.1",
		"karma-mocha-reporter": "2.2.5",
		"karma-script-launcher": "1.0.0",
		"karma-webkit-launcher": "2.4.0",
		"karma-webpack": "5.0.1",
		"mapbox-gl-supported": "1.2.0",
		"playwright": "1.40.1",
		"portfinder-sync": "0.0.2",
		"prettier": "3.2.5",
		"redux-test-utils": "1.0.2",
		"style-loader": "3.3.4",
		"stylelint": "16.0.0",
		"stylelint-config-recommended": "14.0.0",
		"to-string-loader": "1.2.0",
		"webpack": "5.90.3",
		"webpack-bundle-analyzer": "4.10.1",
		"webpack-cli": "5.1.4",
		"webpack-dev-server": "5.0.2"
	},
	"scripts": {
		"start": "webpack serve --open --mode=development --devtool=inline-source-map",
		"start:nohostcheck": "webpack serve --open --mode=development --allowed-hosts all --host 0.0.0.0",
		"build:dev": "webpack --mode=development --devtool=inline-source-map",
		"build:prod": "webpack --mode=production --performance-hints=false",
		"doc": "jsdoc -c jsdoc.conf.json",
		"doc:apply": "node checkOrApplyDoc.js",
		"doc:check": "env DOC_CHECK=true node checkOrApplyDoc.js",
		"prettier:check": "prettier --check .",
		"prettier": "prettier --write .",
		"lint": "eslint --fix \"src/**/*.js\" \"test/**/*.js\" && npx stylelint --fix \"src/**/*.css\" && npx stylelint \"src/**/*.css\"",
		"test": "npx playwright install; KARMA_BROWSERS=$npm_config_browsers karma start --single-run",
		"test:single": "npx playwright install; env KARMA_SPEC=$npm_config_spec env KARMA_BROWSER=$npm_config_browser karma start karma.conf.single.js --single-run",
		"test:debug": "karma start --single-run --browsers ChromeDebugging",
		"test:gha": "karma start karma.conf.gha.js --single-run",
		"e2e": "npx playwright install; env URL=$npm_config_url npx playwright test --browser=${npm_config_browser:-all} --retries=3",
		"es-check": "es-check es2022 \"./src/**/*.js\" --module",
		"bundlesize": "npm run build:prod && npx bundlesize2",
		"analyze-bundle": "webpack --stats=detailed --json > stats.json && webpack-bundle-analyzer ./stats.json",
		"optimize-svg": "npx svgo -r -f src/ --config svgo.config.js --final-newline --multipass",
		"gh-pages": "rm -rf node_modules/.cache/gh-pages && rm -rf dist && npm run build:prod && NODE_DEBUG=gh-pages gh-pages -d dist"
	}
}
