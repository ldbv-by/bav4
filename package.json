    "css-loader": "^6.7.1",
    "dotenv-webpack": "^7.1.0",
    "es-check": "^6.2.1",
    "eslint": "^8.11.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "fucazu-minami": "^1.1.7",
    "html-webpack-plugin": "^5.5.0",
    "jasmine": "^4.0.2",
    "jsdoc": "^3.6.10",
    "karma": "^6.3.17",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-firefox-launcher": "^2.1.2",
    "karma-iframes": "^1.3.1",
    "karma-jasmine": "^4.0.1",
    "karma-junit-reporter": "^2.0.1",
    "karma-script-launcher": "^1.0.0",
    "karma-spec-reporter": "^0.0.33",
    "karma-webkit-launcher": "^1.0.2",
    "karma-webpack": "^5.0.0",
    "playwright": "^1.19.1",
    "portfinder-sync": "0.0.2",
    "redux-test-utils": "^1.0.2",
    "style-loader": "^3.3.1",
    "to-string-loader": "^1.2.0",
    "webpack": "^5.70.0",
    "stylelint": "^14.5.3",
    "stylelint-config-recommended": "^7.0.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "scripts": {
    "start": "webpack serve --open --mode=development --devtool=inline-source-map",
    "start:nohostcheck": "webpack serve --open --mode=development --allowed-hosts all --host 0.0.0.0",
    "build:dev": "webpack --mode=development --devtool=inline-source-map",
    "build:prod": "webpack --mode=production",
    "doc": "jsdoc -c jsdoc.conf.json",
    "lint": "eslint --fix \"src/**/*.js\" \"test/**/*.js\"; npx stylelint --fix \"src/**/*.css\"",
    "test": "npx playwright install; KARMA_BROWSERS=$npm_config_browsers karma start --single-run",
    "test:single": "npx playwright install; env KARMA_SPEC=$npm_config_spec env KARMA_BROWSER=$npm_config_browser karma start karma.conf.single.js --single-run",
    "test:debug": "karma start --single-run --browsers ChromeDebugging",
    "test:gha": "karma start karma.conf.gha.js --single-run",
    "e2e": "npx playwright install; env URL=$npm_config_url npx playwright test --browser=${npm_config_browser:-all} --retries=3",
    "es-check": "es-check es11 \"./src/**/*.js\" --module",
    "analyze-bundle": "webpack --stats=detailed --json > stats.json && webpack-bundle-analyzer ./stats.json"
  }
}
